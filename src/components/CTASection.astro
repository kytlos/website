---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="bg-gray-900 text-white py-16 md:py-24">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Section Title -->
      <h2 class="text-white mb-6">
        {t.cta.title}
      </h2>

      <!-- Supporting Text -->
      <p class="text-xl text-gray-300 mb-10">
        {t.cta.description}
      </p>

      <!-- Contact Form (Netlify Forms) -->
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="max-w-md mx-auto text-left"
      >
        <!-- Hidden field for Netlify -->
        <input type="hidden" name="form-name" value="contact" />

        <!-- Honeypot field for spam protection -->
        <p class="hidden">
          <label>
            {t.cta.honeypot}
            <input name="bot-field" />
          </label>
        </p>

        <!-- Name field -->
        <div class="form-group">
          <label for="name" class="text-white">{t.cta.name} *</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 bg-white text-black border-2 border-gray-300 rounded-md focus:border-white focus:outline-none"
          />
        </div>

        <!-- Email field -->
        <div class="form-group">
          <label for="email" class="text-white">{t.cta.email} *</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 bg-white text-black border-2 border-gray-300 rounded-md focus:border-white focus:outline-none"
          />
        </div>

        <!-- Message field -->
        <div class="form-group">
          <label for="message" class="text-white">{t.cta.message}</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="w-full px-4 py-3 bg-white text-black border-2 border-gray-300 rounded-md focus:border-white focus:outline-none resize-none"
          ></textarea>
        </div>

        <!-- Submit button -->
        <button
          type="submit"
          class="w-full bg-white text-black font-semibold py-3 px-6 rounded-md hover:bg-gray-100 transition-colors"
        >
          {t.cta.sendMessage}
        </button>
      </form>

      <!-- Alternative: Simple email link (comment out form above and uncomment this) -->
      <!-- <a href="mailto:hello@kytlos.com" class="btn btn-primary bg-white text-black hover:bg-gray-100">
        Contact Us
      </a> -->
    </div>
  </div>
</section>

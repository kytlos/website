---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative bg-white py-16 md:py-24 lg:py-32">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <!-- H1 Headline - Primary Value Proposition -->
      <h1 class="text-black mb-6">
        {t.hero.headline}
      </h1>

      <!-- Subheadline - Supporting Text -->
      <p class="text-xl md:text-2xl text-gray-700 mb-10 max-w-3xl mx-auto">
        {t.hero.subheadline}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#contact" class="btn btn-primary">
          {t.hero.scheduleConsultation}
        </a>
        <a href="#services" class="btn btn-secondary">
          {t.hero.learnMore}
        </a>
      </div>
    </div>
  </div>

  <!-- Optional: Subtle logo watermark background -->
  <div
    class="absolute top-10 right-5 w-64 h-64 opacity-5 pointer-events-none hidden lg:block"
    style="background-image: url('/kytlos-logo.png'); background-size: contain; background-repeat: no-repeat;"
  ></div>
</section>

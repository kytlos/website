---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="benefits" class="bg-gray-50 py-16 md:py-24">
  <div class="container mx-auto px-4 md:px-8">
    <!-- Section Title -->
    <h2 class="text-center text-black mb-12 md:mb-16">
      {t.valueProposition.title}
    </h2>

    <!-- 3-Column Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
      <!-- Benefit 1: Expert Strategy -->
      <div class="card text-center">
        <!-- Icon -->
        <div class="mb-6 flex justify-center">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>

        <h3 class="text-black mb-4">{t.valueProposition.expertStrategy.title}</h3>
        <p class="text-gray-700">
          {t.valueProposition.expertStrategy.description}
        </p>
      </div>

      <!-- Benefit 2: Rapid Implementation -->
      <div class="card text-center">
        <!-- Icon -->
        <div class="mb-6 flex justify-center">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>

        <h3 class="text-black mb-4">{t.valueProposition.rapidImplementation.title}</h3>
        <p class="text-gray-700">
          {t.valueProposition.rapidImplementation.description}
        </p>
      </div>

      <!-- Benefit 3: Measurable Impact -->
      <div class="card text-center">
        <!-- Icon -->
        <div class="mb-6 flex justify-center">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>

        <h3 class="text-black mb-4">{t.valueProposition.measurableImpact.title}</h3>
        <p class="text-gray-700">
          {t.valueProposition.measurableImpact.description}
        </p>
      </div>
    </div>
  </div>
</section>
